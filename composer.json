{
    "name": "asamserver/wam",
    "description": "Framework for creating WHMCS addon modules.",
    "type": "project",
    "keywords": ["whmcs", "addon", "framework"],
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "illuminate/events": "^10.0",
        "illuminate/support": "^10.0",
        "jenssegers/blade": "^2.0",
        "nesbot/carbon": "^2.31",
        "predis/predis": "^2.1",
        "symfony/console": "^5.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],

        "post-create-project-cmd": [
            "@composer install",
            "@composer dump-autoload",
            "php addon.php",
            "php asam make:controller Client/DashboardController",
            "php asam make:controller Admin/DashboardController",
            "php asam make:web",
            "php composer.php",
            "@composer dump-autoload"
        ]
        
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        },
        "config": {
            "vendor-dir": "../../../../../vendor"
        }

    },
    "repositories": [
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
