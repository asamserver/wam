{
    "name": "asamserver/wam",
    "description": "Framework for creating WHMCS addon modules.",
    "type": "project",
    "keywords": ["whmcs", "addon", "framework"],
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "illuminate/support": "^11.33",
        "symfony/console": "^6.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "WHMCS\\Module\\Addon\\": "app/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@composer install",
            "@composer dump-autoload",
            "php -r \"file_put_contents('composer.json', preg_replace('/\\\"WHMCS\\\\\\Module\\\\\\Addon\\\\kyc_verification\\\\app\\\\\\\": \\\'app\\\\\\//', '\\\"WHMCS\\\\\\Module\\\\\\Addon\\\\' . basename(getcwd()) . '\\\\app\\\\\\\": \\\'app\\\\\\/', file_get_contents('composer.json')));\"",
            "php asam make:addon $(basename `pwd`)",
            "php asam make:controller Client/DashboardController",
            "php asam make:controller Admin/DashboardController",
            "@composer dump-autoload"
        ]
        
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/asamserver/wam"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
