{
    "name": "miladyousefi/whmcs",
    "description": "Framework for creating WHMCS addon modules.",
    "type": "project",
    "keywords": ["whmcs", "addon", "framework"],
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "illuminate/database": "^11.33",
        "illuminate/support": "^11.33",
        "symfony/console": "^6.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "WHMCS\\Module\\Addon\\": "app/",
            "WHMCS\\Module\\Addon\\Providers\\": "app/Providers/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@composer install",
            "@composer dump-autoload",
            "php asam make:addon $(basename `pwd`)",
            "@composer update",
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/miladyousefi/whmcs"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
